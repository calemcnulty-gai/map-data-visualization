{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "public/",
    "lib/generated/**/*",
    "*.config.js",
    "*.config.ts"
  ],
  "rules": {
    "react/display-name": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn",
    "react-hooks/exhaustive-deps": "warn"
  }
} 